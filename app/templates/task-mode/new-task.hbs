    </div>
  </div>
  <div class="task-item__content cancel-drag">
    {{#if (eq formMode 'description')}}
      {{partial 'task-mode/change-description'}}
    {{/if}}

    {{#if (eq formMode 'actions')}}
      {{partial 'task-mode/change-action'}}
    {{/if}}

    {{#if (eq formMode 'overview')}}
      <div class="task-item__content__row" {{action 'setFormMode' 'description'}}>
