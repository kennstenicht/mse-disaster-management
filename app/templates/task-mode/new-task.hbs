      <div class="task-item__content__row" {{action 'setFormMode' 'actions'}}>
        <div class="task-item__content__row__label">Aufgabe</div>
        <div class="task-item__content__row__value">{{task.actions.title}}</div>
      </div>
      <div class="task-item__content__row">
        <div class="task-item__content__row__label task-item__content__row__label--priority">Priorit채t</div>
