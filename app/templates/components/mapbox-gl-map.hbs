<div class="map-navigation">
  <div class="map-navigation__item" {{action 'toggleDrawingMode' on='press'}}>
    {{#if drawingMode}}
      Deactivate Drawing Mode
    {{else}}
      Activate Drawing Mode
    {{/if}}
  </div>
</div>


{{#if (and settings.baseMap isMapController) }}
  {{map-controller
    zoomIn='zoomIn'
    zoomOut='zoomOut'
    mapControllerPositionX=mapControllerPositionX
    mapControllerPositionY=mapControllerPositionY
  }}
{{/if}}

{{#if drawingMode}}
  {{draw-overlay
    mapId=elementId
    isEditing=isEditing
    selectedFeature=selectedFeature
  }}
{{/if}}


{{yield}}
