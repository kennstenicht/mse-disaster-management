<div class="navigation">
  <div class="navigation__item" {{action 'moveMap'}}>Move Map</div>
  <div class="navigation__item" {{action 'rotateMap'}}>Roate Map</div>
  <div class="navigation__item" {{action 'toggleDrawingMode'}}>
    {{#if drawingMode}}
      Deactivate Drawing Mode
    {{else}}
      Activate Drawing Mode
    {{/if}}
  </div>
</div>

<div class="map-control">
  <div class="map-control__button map-control__button--top" {{action 'moveMap' 0 100}}>></div>
  <div class="map-control__button map-control__button--bottom" {{action 'moveMap' 0 -100}}>&lt;</div>
  <div class="map-control__button map-control__button--right" {{action 'moveMap' 100 0}}>></div>
  <div class="map-control__button map-control__button--left" {{action 'moveMap' -100 0}}>&lt;</div>
  <div class="map-control__button map-control__button--plus" {{action 'zoomIn'}}>+</div>
  <div class="map-control__button map-control__button--minus" {{action 'zoomOut'}}>-</div>
  {{input value=deg action="rotateMap" on="enter" class="map-control__rotate"}}
</div>
{{#each selectedTask in selectedTasks}}
  <div class="task">
    Task
  </div>
{{/each}}

{{#if drawingMode}}
  {{draw-overlay mapId=elementId}}
{{/if}}

{{yield}}
