<div class="map-controller__main">
  <div class="map-controller__main__circle map-controller__main__circle--first"></div>
  <div class="map-controller__main__circle map-controller__main__circle--second"></div>
</div>
<div class="map-controller__zoom">
  <div class="map-controller__zoom__button map-controller__zoom__button--plus" {{action 'zoomIn' on='tap'}}>+</div>
  <div class="map-controller__zoom__button map-controller__zoom__button--minus" {{action 'zoomOut' on='tap'}}>-</div>
</div>